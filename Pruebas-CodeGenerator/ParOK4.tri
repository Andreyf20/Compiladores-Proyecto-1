! En par, segunda declaración no ve a la primera

let

  var b ::= 1

in
  let
    par
      const b ~ 'a'
      and
      var c ::= b ! es el b externo (en el let externo a este let)
    end

  in
    c := succ(c); ! incrementa c
    putint (c) ! debe imprimir entero 2
  end

end