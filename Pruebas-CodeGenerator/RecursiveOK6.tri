! Procedimientos mutuamente recursivos


let

  recursive

    proc Ping (x : Integer) ~ if x > 0 then put ('I') ; Pong (x - 1) else pass end end

    |

    proc Pong (a : Integer) ~ if a > 0 then put ('O') ; Ping (a - 1) else pass end end

  end

in

  Ping (4) ! imprime IOIO

end
